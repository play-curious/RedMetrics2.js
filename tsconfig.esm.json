{
  "compilerOptions": {
    "rootDir": "src",
    "module": "es2020",
    "lib": ["es2020", "dom", "ES5", "es6", "ES2015", "ES2019", "ESNext"],
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true
  }
}
